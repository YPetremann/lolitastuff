<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef Name="ApparelDress" ParentName="ApparelMakeableBase" Abstract="True">
		<apparel>
			<layers>
				<li>Middle</li>
			</layers>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
			</bodyPartGroups>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<workSpeedStat>TailoringSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
			<defaultIngredientFilter>
				<categories>
					<li>Root</li>
				</categories>
				<disallowedThingDefs>
					<li>Gold</li>
					<li>Silver</li>
					<li>Plasteel</li>
					<li>Jade</li>
					<li>Uranium</li>
				</disallowedThingDefs>
			</defaultIngredientFilter>
		</recipeMaker>
	</ThingDef>

</Defs>